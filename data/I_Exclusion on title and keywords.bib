keywords = {Accident prevention,Conservative conditions,Core disruptive accidents,Damage detection,Errors,Human error probability,Human reliability analysis,Intelligent systems,Loss of coolant accidents,Monte Carlo methods,Monte Carlo simulation,Nuclear fuels,Nuclear power plants,Probabilistic safety assessment,Reliability analysis,Risk assessment,System failure probability,Systems engineering,Thermal hydraulics,Thermal-hydraulic analysis,Thermal-hydraulic simulations,Thermal-hydraulics},
title = {{Realistic estimation of human error probability through Monte Carlo thermal-hydraulic simulation}},
