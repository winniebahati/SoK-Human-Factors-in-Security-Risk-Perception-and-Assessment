journal = {Proceedings of the ACM on Human-Computer Interaction},
keywords = {Accountability,Algorithmic Decision Making,Algorithmic Fairness,Human-Centered Machine Learning,Machine-Assisted Decision Making,and Transparency},
month = {nov},
number = {CSCW},
publisher = {Association for Computing Machinery},
title = {{Human decision making with machine advice: An experiment on bailing and jailing}},
url = {https://doi.org//10.1145/3359280},
