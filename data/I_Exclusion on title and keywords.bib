keywords = {Autonomous agents,Autonomous ship,Autonomous systems,Collision scenarios,Conventional methods,Efficient interaction,Electrostatic devices,Equipment reliability,Event sequence diagrams,Failure (mechanical),Failure propagation,Human-autonomy interaction,Human-system interaction,Identification of risks,Job analysis,Risk analysis,Risk assessment,Ships,Software reliability,System design,Unmanned surface vehicles,article,human,risk assessment,risk reduction,ship},
title = {{A generic approach to analysing failures in human – System interaction in autonomy}},
url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85084938553&doi=10.1016%2Fj.ssci.2020.104808&partnerID=40&md5=e36e709cc4321eda626f685d7279a2bb}
