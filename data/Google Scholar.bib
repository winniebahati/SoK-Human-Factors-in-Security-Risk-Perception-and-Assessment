file = {:C\:/Users/winni/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Enaizan et al. - 2020 - Electronic medical record systems decision support examination framework for individual, security and privacy co.pdf:pdf},
issn = {21907196},
journal = {Health and Technology},
keywords = {E-healthcare,Electronic medical records,Multi-criteria decision-making and structural equa,Security and privacy,Users behaviour},
month = {may},
number = {3},
pages = {795--822},
publisher = {Springer},
title = {{Electronic medical record systems: decision support examination framework for individual, security and privacy concerns using multi-perspective analysis}},
volume = {10},
